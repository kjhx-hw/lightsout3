<Page
    x:Class="LightsOutUWP.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightsOutUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="500" Height="600">

    <RelativePanel Width="500" Height="600">
        <ComboBox Width="120" SelectedIndex="0" RelativePanel.RightOf="txtGridsize" Margin="25,20,0,0">
            <ComboBoxItem Content="3x3"/>
        </ComboBox>
        <TextBlock x:Name="txtGridsize" Text="Grid Size" TextWrapping="Wrap" Margin="25,25,0,0"/>
    </RelativePanel>
</Page>
